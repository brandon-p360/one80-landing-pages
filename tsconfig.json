{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/assets/*": ["src/assets/*"],
      "@/utils/*": ["src/utils/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/types/*": ["src/types/*"],
      "@/scss/*": ["src/scss/*"],
      "@/*": ["src/components/*"]
    } 
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
}